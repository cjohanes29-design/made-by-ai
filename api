export default async function handler(req, res) {
  const { prompt } = req.body;

  const response = await fetch("https://api.openai.com/v1/images/generations", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Authorization: "Bearer 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"
    },
    body: JSON.stringify({
      model: "dall-e-3",
      prompt,
      n: 1,
      size: "1024x1024"
    })
  });

  const data = await response.json();
  res.status(200).json(data);
}
